<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/qrcode"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bt_shape"
        android:drawableLeft="@drawable/qrcode"
        android:padding="10dp"
        android:text="线路"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/img1"
        app:backgroundTint="@color/icons"
        app:fabSize="mini"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/meeage"
        app:backgroundTint="@color/icons"
        app:fabSize="mini"
        android:layout_gravity="top|left"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/bt_shape1"
        app:backgroundTint="@color/icons"
        app:fabSize="mini"
        android:background="@drawable/bt_shape"
        android:layout_gravity="top|right"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"/>

</FrameLayout>