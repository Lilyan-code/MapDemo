<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="专属每日天气播报"
            android:layout_marginLeft="60dp"
            android:layout_gravity="center_vertical"
            android:textSize="22sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_return1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back"/>

        <EditText
            android:id="@+id/search"
            style="@android:style/Widget.TextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_bg"
            android:gravity="center_vertical"
            android:hint="    请输入城市名"
            android:singleLine="true"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="当前城市"/>
        <Button
            style="padding:10px 20px;border-radius:5px;backgroud:none;border:1px #555 solid;color:#333;"
            android:background="@drawable/btn_bg"
            android:id="@+id/current_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="桂林市"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="热搜城市"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="25dp"
                android:id="@+id/beijing"
                android:text="北京市"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="40dp" />
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/shanghai"
                android:layout_toRightOf="@+id/beijing"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="上海市"/>
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/guangzhou"
                android:layout_toRightOf="@+id/shanghai"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="广州市"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="25dp"
                android:id="@+id/shenzhen"
                android:text="深圳市"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="40dp" />
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/tianjin"
                android:layout_toRightOf="@+id/shenzhen"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="天津市"/>
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/chengdu"
                android:layout_toRightOf="@+id/tianjin"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="成都市"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="25dp"
                android:id="@+id/chongqing"
                android:text="重庆市"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="40dp" />
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/qingdao"
                android:layout_toRightOf="@+id/chongqing"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="青岛市"/>
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/nanjing"
                android:layout_toRightOf="@+id/qingdao"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="南京市"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="25dp"
                android:id="@+id/dalian"
                android:text="大连市"
                android:textSize="18sp"
                android:layout_width="100dp"
                android:layout_height="40dp" />
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/wuhan"
                android:layout_toRightOf="@+id/dalian"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="武汉市"/>
            <Button
                android:background="@drawable/btn_bg"
                android:id="@+id/zhenzhou"
                android:layout_toRightOf="@+id/wuhan"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="郑州市"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>